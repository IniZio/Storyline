{
  "name": "hello-vue3",
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node script/build --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node script/build --env=production",
    "build": "npm run build:vue && npm run build:ele && electron-builder",
    "typesync": "typesync"
  },
  "build": {
    "appId": "newman.kcchow@gmail.com",
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@egoist/vue-emotion": "^0.6.2",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1",
    "styled-tools": "^1.7.2",
    "vue": "^3.0.0",
    "vue3-styled-components": "^1.0.1",
    "vuesax": "^4.0.1-alpha.25"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^7.2.3",
    "@types/minimist": "^1.2.0",
    "@types/sass": "^1.16.0",
    "@types/wait-on": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@vue/compiler-sfc": "^3.0.0-rc.1",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron": "latest",
    "electron-builder": "^22.8.0",
    "electron-connect": "^0.6.3",
    "eslint": "^7.10.0",
    "eslint-plugin-vue": "^7.0.1",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rollup-plugin-esbuild": "^2.4.2",
    "sass": "^1.26.10",
    "typescript": "^4.0.3",
    "typesync": "^0.7.0",
    "vite": "^1.0.0-rc.4",
    "wait-on": "^5.2.0"
  }
}
